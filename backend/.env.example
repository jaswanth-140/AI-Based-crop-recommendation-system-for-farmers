# Application Configuration
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-super-secret-key-change-in-production

# API Keys (REQUIRED - Get these from respective providers)
OPENWEATHER_API_KEY=your-openweather-api-key-here
GROQ_API_KEY=your-groq-api-key-here
MANDI_API_KEY=your-mandi-api-key-here

# Bhuvan LULC API Keys (Optional)
LULC_STATS_KEY=default_stats_key
LULC_AOI_KEY=default_aoi_key

# Database (SQLite by default, change for production)
DATABASE_URL=sqlite:///app.db

# Caching
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS (Comma-separated origins for production)
CORS_ORIGINS=*

# Model Paths
MODEL_PATH=models/crop_recommendation_model.pkl

# Google Cloud Credentials (for voice chatbot)
GOOGLE_APPLICATION_CREDENTIALS=google-credentials.json

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_METRICS_PORT=9090